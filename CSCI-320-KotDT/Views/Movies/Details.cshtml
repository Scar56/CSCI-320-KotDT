@model CSCI_320_KotDT.Models.Movie
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Release_year)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Release_year)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Running_time)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Running_time)
        </dd>
        <table class="table">
        @foreach (var actor in Model.Cast)
            {
                <tr class="index-row" onclick="location.href = '@(Url.Action("Details", "Actors", new { id = actor.Name }))'">
                    <td>
                        @Html.DisplayFor(modelItem => actor.Name)
                    </td>
                    <td>   
                        @Html.DisplayFor(modelItem => actor.Role)
                    </td>
                </tr>
        }
        </table>
    </dl>
</div>
<div>
        <h3>Reviews</h3>
        @foreach(var review in Model.reviews)
        {
                <p>Review by: @Html.DisplayFor(text => review.username)</p>
                <p>@Html.DisplayFor(text => review.review_text)</p>
        }

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
